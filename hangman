import random

# Global variables for scoring
EASY_ATTEMPTS = 8
MEDIUM_ATTEMPTS = 6
HARD_ATTEMPTS = 4
SCORE_MULTIPLIER = 100

# High score dictionary
high_scores = {"easy": 0, "medium": 0, "hard": 0}

def choose_word():
    words = ["python", "hangman", "programming", "code", "computer"]
    return random.choice(words)

def display_word(word, guessed_letters):
    display = ""
    for letter in word:
        if letter in guessed_letters:
            display += letter
        else:
            display += "_"
    return display

def hangman():
    print("Welcome to Hangman!")
    difficulty = input("Choose difficulty (easy, medium, hard): ").lower()
    word = choose_word()
    guessed_letters = []
    attempts_left = EASY_ATTEMPTS if difficulty == "easy" else (MEDIUM_ATTEMPTS if difficulty == "medium" else HARD_ATTEMPTS)

    while attempts_left > 0:
        print("\nAttempts left:", attempts_left)
        print("Word:", display_word(word, guessed_letters))

        guess = input("Guess a letter or the whole word: ").lower()
        if len(guess) == 1 and guess.isalpha():
            if guess in guessed_letters:
                print("You've already guessed that letter!")
                continue
            guessed_letters.append(guess)
            if guess not in word:
                attempts_left -= 1
                print("Incorrect guess!")
        elif len(guess) == len(word) and guess.isalpha():
            if guess == word:
                print("\nCongratulations! You guessed the word:", word)
                update_high_score(difficulty, attempts_left)
                break
            else:
                print("Incorrect guess!")
                attempts_left -= 1
        else:
            print("Please enter a single letter or the whole word.")
            continue

        if "_" not in display_word(word, guessed_letters):
            print("\nCongratulations! You guessed the word:", word)
            update_high_score(difficulty, attempts_left)
            break

    if attempts_left == 0:
        print("\nSorry, you've run out of attempts. The word was:", word)

def update_high_score(difficulty, attempts_left):
    global high_scores
    score = attempts_left * SCORE_MULTIPLIER
    if score > high_scores[difficulty]:
        high_scores[difficulty] = score
        print("New high score for", difficulty, "difficulty:", score)

def display_high_scores():
    print("\nHigh Scores:")
    for difficulty, score in high_scores.items():
        print(difficulty.capitalize(), ":", score)

if __name__ == "__main__":
    while True:
        hangman()
        display_high_scores()
        play_again = input("\nDo you want to play again? (yes/no): ").lower()
        if play_again != "yes":
            break
